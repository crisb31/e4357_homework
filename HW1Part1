		}
		else if(location=='i'){
			printf("2 7 6\n");
			printf("9 5 1\n"); 
			printf("4 3 8\n");
		}
	}
	
	if (number==1) {
		if(location=='b') {
			printf("6 1 8\n");
			printf("7 5 3\n"); 
			printf("2 9 4\n");
		}
		else if(location=='d') {
			printf("8 3 4\n");
			printf("1 5 9\n"); 
			printf("6 7 8\n");
		}
		else if(location=='f') {
			printf("2 7 6\n");
			printf("9 5 1\n"); 
			printf("4 3 8\n");
		}
		else if(location=='h') {
			printf("4 9 2\n");
			printf("3 5 7\n"); 
			printf("8 1 6\n");
		}		
	}

	if (number==3) {
		if(location=='b') {
			printf("8 3 4\n");
			printf("1 5 9\n"); 
			printf("6 7 2\n");
		}
		else if(location=='d') {
			printf("4 9 2\n");
			printf("3 5 7\n"); 
			printf("8 1 6\n");
		}
		else if(location=='f') {
			printf("6 1 8\n");
			printf("7 5 3\n"); 
			printf("2 9 4\n");
		}
		else if(location=='h') {
			printf("2 7 6\n");
			printf("9 5 1\n"); 
			printf("4 3 8\n");
		}		
	}

	if (number==7) {
		if(location=='b') {
			printf("2 7 6\n");
			printf("9 5 1\n"); 
			printf("4 3 8\n");
		}
		else if(location=='d') {
			printf("6 1 8\n");
			printf("7 5 3\n"); 
			printf("2 9 4\n");
		}
		else if(location=='f') {
			printf("4 9 2\n");
			printf("3 5 7\n"); 
			printf("8 1 6\n");
		}
		else if(location=='h') {
			printf("8 3 4\n");
			printf("1 5 9\n"); 
			printf("6 7 2\n");
		}		
	}

	if (number==9) {
		if(location=='b') {
			printf("4 9 2\n");
			printf("3 5 7\n"); 
			printf("8 1 6\n");
		}
		else if(location=='d') {
			printf("2 7 6\n");
			printf("9 5 1\n"); 
			printf("4 3 8\n");
		}
		else if(location=='f') {
			printf("8 3 4\n");
			printf("1 5 9\n"); 
			printf("6 7 2\n");
		}
		else if(location=='h') {
			printf("6 1 8\n");
			printf("7 5 3\n"); 
