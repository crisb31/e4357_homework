			printf("4 9 2\n");
			printf("3 5 7\n"); 
			printf("8 1 6\n");
		}
	}
	
	if (number==8) {
		if (location=='a') {
			printf("8 3 4\n");
			printf("1 5 9\n"); 
			printf("6 7 8\n");
		}
		else if(location=='c'){
			printf("6 1 8\n");
