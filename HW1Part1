		}
		else if(location=='i'){
			printf("6 1 8\n");
			printf("7 5 3\n"); 
			printf("2 9 4\n");
		}
	}
	
	if (number==6) {
		if (location=='a') {
			printf("6 1 8\n");
			printf("7 5 3\n"); 
			printf("2 9 4\n");
		}
		else if(location=='c'){
			printf("2 7 6\n");
